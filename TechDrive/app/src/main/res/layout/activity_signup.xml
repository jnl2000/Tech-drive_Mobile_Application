<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Signup"
    android:background="@drawable/fvbg"
    >


    <TextView
        android:id="@+id/txttopic"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/curve_btn"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:layout_below="@+id/txttopic"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Type Your Email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/txtemail"
        android:layout_marginTop="15dp"
        android:background="#30ffffff"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="20dp"
        />



    <TextView
        android:id="@+id/txtpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Type Your Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/txtpassword"
        android:password="true"
        android:layout_marginTop="15dp"
        android:background="#30ffffff"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="20dp"
        />



    <TextView
        android:id="@+id/txtretypepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Re type Password"
        android:textSize="20dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Retype Your Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/txtretypepassword"
        android:password="true"
        android:layout_marginTop="15dp"
        android:background="#30ffffff"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/btnsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/repassword"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:padding="10dp"
        />


    <Button
        android:id="@+id/btnsignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already You Have Account?"
        android:textSize="20dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textAllCaps="false"
        android:layout_below="@+id/btnsignup"
        />

</RelativeLayout>